<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_playlist"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="95dp"
        android:layout_height="97dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_200"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_playlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgPl"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_queue_music_24"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:textSize="20dp"
        android:id="@+id/name_playlist"
        android:layout_width="236dp"
        android:layout_height="45dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Han Hyo Joo"
        android:layout_marginLeft="13dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/name_creator"
        android:layout_width="238dp"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Han Hyo Joo"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/name_playlist"></TextView>

    <ImageView
        android:id="@+id/playlist_more_feature"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_more_horiz_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>